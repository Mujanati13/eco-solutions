# Production Environment Variables for Backend VPS Deployment

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration - Update with your VPS database details
DB_HOST=localhost
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=eco_s_orders
DB_PORT=3306

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Frontend URL Configuration - Replace with your frontend URL
FRONTEND_URL=http://YOUR_VPS_IP:3000
CLIENT_URL=http://YOUR_VPS_IP:3000

# For HTTPS deployment use:
# FRONTEND_URL=https://your-domain.com
# CLIENT_URL=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Sheets Integration (if used)
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key
GOOGLE_SHEETS_ID=your_google_sheets_id

# Google OAuth2 Configuration (if used)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=your_google_oauth_redirect_uri

# Email Configuration (if used)
EMAIL_FROM=your_email@domain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_email_password

# Examples:
# FRONTEND_URL=http://192.168.1.100:3000
# CLIENT_URL=http://192.168.1.100:3000
